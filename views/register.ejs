<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Registrar</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="register.css" />
    </head>
    <body class="bg-light text-dark">
        <div
            class="container d-flex justify-content-center align-items-center vh-100"
        >
            <div class="card p-5 shadow-sm" style="max-width: 400px">
                <h2 class="text-center mb-4">Registrar</h2>
                <form id="register-form" action="/register" method="post">
                    <input
                        type="text"
                        class="form-control"
                        name="nome"
                        id="nome"
                        placeholder="Digite seu nome completo"
                        required
                        autocomplete="off"
                    />
                    <input
                        type="text"
                        class="form-control"
                        name="usuario"
                        id="usuario"
                        placeholder="Digite seu usuário"
                        required
                        autocomplete="off"
                    />

                    <input
                        type="password"
                        class="form-control"
                        name="senha"
                        id="senha"
                        placeholder="Digite sua senha"
                        required
                    />

                    <input
                        type="password"
                        class="form-control"
                        name="confirmarsenha"
                        id="confirmarsenha"
                        placeholder="Confirme sua senha"
                        required
                    />

                    <button type="submit" class="btn btn-primary w-100">
                        Registrar
                    </button>
                    <button id="btnLogin" class="btn btn-primary w-100">
                        Entrar
                    </button>
                    <p
                        id="userExists"
                        class="text-danger mt-3 <%= userExists || 'hidden' %>"
                    >
                        Usuário já existe
                    </p>
                </form>
            </div>
        </div>

        <script>
            const btnLogin = document.querySelector("#btnLogin");

            btnLogin.addEventListener("click", () => {
                window.location.href = "/login";
            });

            const registerForm = document.querySelector("#register-form");
            const senha = document.querySelector("#senha");
            const confirmarSenha = document.querySelector("#confirmarsenha");

            registerForm.addEventListener("submit", (e) => {
                if (senha.value !== confirmarSenha.value) {
                    e.preventDefault();
                    alert("Senhas diferentes");
                }
            });
        </script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
